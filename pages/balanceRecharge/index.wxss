/* pages/balanceRecharge/index.wxss */
.wrapper {

}

.wrapper>.content {
    padding: 12rpx 30rpx;
    box-sizing: border-box;
}

.wrapper .content .head {
    height: 238rpx;
    width: 100%;
    border-radius: 4px;
    overflow: hidden;
    position: relative;
}

.wrapper .content .head .my-balance {
    position: absolute;
    left: 60rpx;
    top: 75rpx;
    color: #fff;
}

.wrapper .content .head .my-balance .title {
    font-size: 20rpx;
}

.wrapper .content .head .my-balance .price {
    font-size: 30rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.wrapper .content .head .my-balance .tip {
    font-size: 24rpx;
}

.wrapper .content .head image {
    width: 100%;
    height: 100%;
}

.wrapper .content .body {

}

.wrapper .content .body .title {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 26rpx;
}

.wrapper .content .body .content {}

.wrapper .content .body .content .list {
    height: 130rpx;
    width: 100%;
    background: #fff;
    border-radius: 10rpx;
    position: relative;
    margin-bottom: 30rpx;
}

.wrapper .content .body .content .list .icon {
    position: absolute;
    top: -15rpx;
    left: 20rpx;
    height: 50rpx;
    width: 50rpx;
    border-radius: 4px;
    overflow: hidden;
}

.wrapper .content .body .content .list .icon image {
    width: 100%;
    height: 100%;
}

.wrapper .content .body .content .list .detail {
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    padding-left: 20rpx;
    box-sizing: border-box;
    top: 34rpx;
}

.wrapper .content .body .content .list .detail.custom {
    display: inline-block;
}

.wrapper .content .body .content .list .detail.custom text {
    float: left;
}

.wrapper .content .body .content .list .detail.custom input {
    width: 190rpx;
    position: absolute;
    top: 50%;
    left: 180rpx;
    transform: translateY(-50%);
    font-size: 24rpx;
    border-bottom: 1px solid #e1e1e1;
    padding: 15rpx 0;

}

.wrapper .content .body .content .list .detail .price {
    font-size: 30rpx;
}

.wrapper .content .body .content .list .detail .price .num {
    font-size: 24rpx;
}

.wrapper .content .body .content .list .detail .tip {
    margin-left: 20rpx;
    font-size: 22rpx;
}


.wrapper .content .body .content .list .operation {
    position: absolute;
    width: 170rpx;
    height: 112rpx;
    overflow: hidden;
    top: 50%;
    right: 20rpx;
    transform: translateY(-50%);
}

.wrapper .content .body .content .list .operation image {
    width: 100%;
    height: 100%;
}

/*     弹出框     */
.popup {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
}

.popup .mask {
    height: 100%;
    width: 100%;
    height: 100%;
    width: 100%;
    background: #000;
    opacity: 0.5;
    z-index: 1;
}

.popup .content {
    height: 500rpx;
    background: #fff;
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
}

.popup .content .title {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 26rpx;
    position: relative;
}

.popup .content .title .close {
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    position: absolute;
    top: 50%;
    left: 50rpx;
    transform: translateY(-50%);
}

.popup .content .title i {
    font-size: 28rpx;
    color: #dbdbdb;
    text-align: center;
}

.popup .content .price {
    margin-top: 70rpx;
    font-size: 54rpx;
    text-align: center;
}

.popup .btn {
    width: 600rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 4px;
    background: #608efe;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    margin: 50rpx auto;
}


































