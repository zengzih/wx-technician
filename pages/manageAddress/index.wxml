<view class="wrapper">
    <v-header title="我的地址" back></v-header>

    <view class="content">
        <view class="address-content" bindtap="handleClick" data-id="{{ item.id }}" wx:for="{{ addressData }}" wx:key="{{ item.id }}">
            <view class="group address" bindtap="handleAddAddress">
                <view class="phone-name">
                    <text class="name">{{ item.name }}</text>
                    <text class="phone">{{ item.phone }}</text>
                    <i class="iconfont icon-fankui"></i>
                </view>
                <view class="address">{{ item.remark }}</view>
            </view>
        </view>
    </view>
</view>
