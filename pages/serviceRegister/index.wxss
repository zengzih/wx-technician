/* pages/serviceRegister/index.wxss */

.wrapper {
    background: #fff;
}

.wrapper .content {
    padding: 0 50rpx;
    box-sizing: border-box;
}

.wrapper .content .head .step {
    height: 60rpx;
    line-height: 60rpx;
}

.wrapper .content .head .step text:first-child {
    font-size: 32rpx;
}

.wrapper .content .head .step text:first-child {
    font-size: 32rpx;
}

.wrapper .content .head .step text:last-child {
    font-size: 24rpx;
}

.wrapper .content .head .title {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 40rpx;
}

.wrapper .content .head .tip {
    font-size: 26rpx;
    color: #d47863;
}

.wrapper .content .body .group {
    padding: 20rpx 0;
    border-bottom: 1px solid #f4f4f4;
    position: relative;
}

.wrapper .content .body .group .label {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
}

.wrapper .content .body .group .con {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 26rpx;
}

.wrapper .content .body .group .con.upload {
    color: #ff787e;
    position: relative;
}

.wrapper .content .body .group .con.upload .upload-box {
    width: 100rpx;
    height: 100rpx;
    border-radius: 4px;
    position: absolute;
    border: 1px solid #e5e5e5;
    right: 0;
    top: -32rpx;
    overflow: hidden;
}

.wrapper .content .body .group .con.upload .upload-box image {
    width: 100%;
    height: 100%;
}

.wrapper .content .body .group .con.upload .upload-box .weui-uploader__bd {
    position: absolute;
    top: 0;
    left: 0;
}

.wrapper .content .body .group .con.upload .upload-box .weui-uploader__hd {
    display: none;
}

.wrapper .content .body .group .con.upload .upload-box i {
    font-size: 88rpx;
    position: absolute;
    top: 0;
    left: 0;
    color: #fff;
}

.wrapper .content .body .group .con input {
    height: 100%;
    padding: 5rpx 0;
    line-height: 90rpx;
    font-size: 30rpx;
}

.wrapper .content .body .group .con radio {
    margin-right: 100rpx;
    height: 30rpx;

}


