.footer {
    height: 120rpx;
    width: 100%;
    border-top: 1px solid #ededed;
    position: fixed;
    bottom: 0;
    left: 0;
}

.footer view {
    height: 100rpx;
    width: 90%;
    background: #fe4e7d;
    position: absolute;
    top: 50%;
    left: 50%;
    border-radius: 4px;
    transform: translate(-50%, -50%);
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}