.footer {
    height: 120rpx;
    width: 100%;
    border-top: 1px solid #ededed;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.footer view {
    height: 90rpx;
    width: 90%;
    background: #fe4e7d;
    position: absolute;
    top: 50%;
    left: 50%;
    border-radius: 4px;
    transform: translate(-50%, -50%);
    color: #fff;
    text-align: center;
    line-height: 90rpx;
}


.footer.sp view {
    width: 48%;
    transform: translate(0, -50%);
}

.footer.sp view:first-child {
    left: 10rpx !important;
}

.footer.sp view:last-child {
    right: 10rpx;
    left: auto;
}