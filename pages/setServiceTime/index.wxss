/* pages/setServiceTime/index.wxss */
.wrapper {
    height: 100%;
}

.wrapper .content {
    height: calc(100% - 150rpx);
    padding: 20rpx;
    box-sizing: border-box;
}

.wrapper>.content>.calender-content {
    background: #fff;
    border-radius: 4px;
}

.wrapper>.content> .date-detail {
    width: 100%;
    border-radius: 4px;
    background: #fff;
}

.wrapper .content .date-detail .group {
    border-bottom: 1px solid #f2f2f2;
    padding: 20rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
    position: relative;
}

.wrapper .content .date-detail .group>.switch {
    position: absolute;
    top: 50%;
    right: 20rpx;
    transform: translateY(-50%);
}

.wrapper .content .date-detail .group .title {
    font-size: 30rpx;
}

.wrapper .content .date-detail .group .tip {
    font-size: 26rpx;
    color: #adadad;
    margin-top: 15rpx;
}

.wrapper .content .date-detail .start-end-date {
    padding: 0 30rpx;
    box-sizing: border-box;
    position: relative;
}

.wrapper .content .date-detail .start-end-date>.icon {
    width: 70rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: #fff;
    position: absolute;
    top: 50%;
    left: 1rpx;
    transform: translateY(-50%) rotate(90deg);
    z-index: 2;
}

.wrapper .content .date-detail .start-end-date>.icon i {
    font-size: 50rpx;
    color: #d6d6d6;
}

.wrapper .content .date-detail .start-end-date .list {
    height: 100rpx;
    padding-left: 50rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #f2f2f2;
    position: relative;
}

.wrapper .content .date-detail .start-end-date .list .date text:nth-child(2) {
    font-size: 26rpx;
    margin-left: 24rpx;
    margin-right: 24rpx;
}

.wrapper .content .date-detail .start-end-date .list .edit {
    font-size: 50rpx;
    width: 100rpx;
    height: 100%;
    text-align: center;
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.wrapper .content .date-detail .start-end-date .list .icon {
    height: 16rpx;
    width: 16rpx;
    background: #409EFF;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.wrapper .content .date-detail .start-end-date .list.end .icon {
    background: red;
}


.wrapper>.content>.current-date {
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    border-radius: 4px;
    margin: 10rpx 0;
    font-size: 28rpx;
    color: #9d9d9d;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.footer {
    position: absolute;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    left: 0;
}

.footer .btn {
    position: absolute;
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background: #409EFF;
    border-radius: 12rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}











