/* pages/confirmOrderForm/index.wxss */
.wrapper {
    height: 100%;
    background: #E4E7ED;
}

.wrapper .content {
    border-top: 1px solid #eeeeee;
    padding: 0 15rpx;
    box-sizing: border-box;
}

.wrapper .content .address-content {
}

.wrapper .content .address-content {
    margin-top: 20rpx;
    padding: 20rpx;
    background: #F2F6FC;
    border-radius: 4px;
    box-sizing: border-box;
    position: relative;
}

.wrapper .content .address-content {
    font-size: 28rpx;
}

.wrapper .content .address-content .name, .wrapper .content .address-content .phone {
    color: #000;
}
.wrapper .content .address-content .phone {
    margin-left: 20rpx;
}

.wrapper .content .address-content i {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    color: gray;
}

.wrapper .content .address-content .address {
    color: #606266;
}

.wrapper .content .groups {
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 4px;
    margin-top: 20rpx;
}


.wrapper .content .groups .group.remark {

}

.wrapper .content .groups .group.remark .label {
    display: inline-block;
    width: 100rpx;
    float: left;
}

.wrapper .content .groups .group.remark .value {
    display: inline-block;
    float: left;
    width: calc(100% - 100rpx);
    height: 200rpx;
    box-sizing: border-box;
    border-radius: 4px;
    border: 1px solid #F2F6FC;
}

.wrapper .content .groups .group.remark .value textarea {
    height: 100%;
    width: 100%;
    padding: 10rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #000;
}

.wrapper .content .groups .group {
    padding: 20rpx 0;
    font-size: 30rpx;
    border-bottom: 1px solid #eeeeee;
    position: relative;
    overflow: hidden;
}

.wrapper .content .groups .group.fw {
    height: 60rpx;
    line-height: 60rpx;
}

.wrapper .content .groups .group.fw .value text,
.wrapper .content .groups .group.fw .value view
{
    float: right;
}

.wrapper .content .groups .group.fw .value view {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    overflow: hidden;
}

.wrapper .content .groups .group.fw .value view image {
    width: 100%;
    height: 100%;
}

.wrapper .content .groups .group .value{
    color: #fe4e7d;
}

.wrapper .content .groups .group .value {
    float: right;
}

.wrapper .content .groups .group.address {

}

.wrapper .content .groups .group.project-info {

}


.wrapper .content .groups .group.project-info .image-box {
    height: 130rpx;
    width: 130rpx;
    border-radius: 4rpx;
    margin-right: 30rpx;
    overflow: hidden;
    float: left;
}

.wrapper .content .groups .group.project-info .image-box image {
    height: 100%;
    width: 100%;
}

.wrapper .content .groups .group.project-info .detail .name {
    font-size: 26rpx;
    line-height: 44rpx;
}

.wrapper .content .groups .group.project-info .detail {
    overflow: hidden;
    line-height: 44rpx;
    float: left;
}

.wrapper .content .groups .group.project-info .detail text {
    font-size: 24rpx;
    color: #bbbbbb;
}

.wrapper .content .groups .group.project-info .detail text:first-child {
    float: left;
}

.wrapper .content .groups .group.project-info .detail text:last-child {
    float: right;
    margin-left: 30rpx;
}

.wrapper .content .groups .group.project-info .detail .price {
    font-size: 24rpx;
}

.wrapper .footer {
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    border-top: 1px solid #ededed;
    background: #fff;
}

.wrapper .footer view:first-child {
    float: left;
    height: 100%;
    line-height: 100rpx;
    margin-left: 30rpx;
    font-size: 34rpx;
}

.wrapper .footer view:last-child {
    position: absolute;
    top: 50%;
    margin-top: -40rpx;
    right: 35rpx;
    height: 80rpx;
    border-radius: 14px;
    background: #fe4e7d;
    line-height: 80rpx;
    color: #fff;
    font-size: 36rpx;
    width: 400rpx;
    text-align: center;
}

.wrapper .footer .price {
    color: #fe4e7d;
}



/*  支付的弹窗  */
.pay-box {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.pay-box .mask {
    height: 100%;
    width: 100%;
    background: #000;
    opacity: 0.5;
}

.pay-box .content {
    width: 100%;
    height: 660rpx;
    background: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
}

.pay-box .content .title {
    padding: 40rpx;
    box-sizing: border-box;
    text-align: center;
    position: relative;
    margin-bottom: 80rpx;
}

.pay-box .content .title i {
    font-size: 30rpx;
    color: #dedede;
    position: absolute;
    top: 50%;
    left: 40rpx;
    transform: translateY(-50%);
}

.pay-box .content .title text {
    font-size: 32rpx;
    color: #000;
}

.pay-box .content .price {
    width: 100%;
    text-align: center;
    font-size: 54rpx;
    font-weight: bold;
    margin-bottom: 100rpx;
}

.pay-box .content .price text:first-child {
    font-size: 38rpx;
}

.pay-box .content .pay-footer {

}

.pay-box .content .pay-footer .btn {
    width: 610rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    border-radius: 6px;
    border: 1px solid #628bf7;
    margin: 0 auto;
    background: #628bf7;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    color: #fff;
}

.pay-box .content .pay-footer .btn:last-child {
    background: #fff;
    color: #628bf7;
}













