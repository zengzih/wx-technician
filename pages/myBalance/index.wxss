/* pages/myBalance/index.wxss */
.wrapper {
}

.wrapper .content {
    padding: 20rpx;
    box-sizing: border-box;
}

.wrapper .head {
    height: 330rpx;
    width: 100%;
    overflow: hidden;
    border-radius: 12rpx;
    position: relative;
}

.wrapper .head image {
    width: 100%;
    height: 100%;
}

.wrapper .head .detail {
    text-align: center;
    position: absolute;
    width: 200rpx;
    color: #fff;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.wrapper .head .detail .balance {
    font-size: 60rpx;
}

.wrapper .head .detail .tip {
    font-size: 22rpx;
    margin-top: 34rpx;
}

.wrapper .content .btn {
    width: 700rpx;
    height: 88rpx;
    border-radius: 4px;
    border:1px solid #758cdc;
    line-height: 88rpx;
    text-align: center;
    font-size: 28rpx;
    color: #758cdc;
    position: absolute;
    bottom: 50rpx;
    left: 50%;
    transform: translateX(-50%);
}