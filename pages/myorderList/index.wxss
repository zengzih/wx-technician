/* pages/myorderList/index.wxss */

.wrapper {

}

.wrapper .content {

}

.wrapper .content .tabs {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #e0e0e0;
    background: #fff;
    margin-bottom: 20rpx;
}

.wrapper .content .tabs view {
    flex: 1;
    text-align: center;
    position: relative;
    font-size: 32rpx;
    color: #a1a1a1;
}

.wrapper .content .tabs .tab.active {
    color: #5c93f0;
}

.wrapper .content .tabs .tab.active:after {
    content: '';
    position: absolute;
    width: 80%;
    height: 2px;
    bottom: 0px;
    left: 50%;
    transform: translateX(-50%);
    background: #5c93f0;
}

.wrapper .content .body {
    padding: 0 20rpx;
    box-sizing: border-box;
}

.wrapper .content .body .list {
    width: 100%;
    background: #fff;
    border-radius: 6px;
    padding: 0 30rpx;
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.wrapper .content .body .list .head {
    height: 85rpx;
    line-height: 85rpx;
    overflow: hidden;
    border-bottom: 1px solid #f2f2f2;
}

.wrapper .content .body .list .head .type {
    float: left;
    font-size: 30rpx;
}

.wrapper .content .body .list .head .status {
    float: right;
    font-size: 24rpx;
    color: #ff4131;
}

.wrapper .content .body .list .con {
    overflow: hidden;
    padding: 20rpx 0;
}

.wrapper .content .body .list .con .photo {
    float: left;
    height: 150rpx;
    width: 150rpx;
    border-radius: 4px;
    overflow: hidden;
}

.wrapper .content .body .list .con .photo image {
    width: 100%;
    height: 100%;
    margin-right: 30rpx;
}

.wrapper .content .body .list .con .detail {
    float: left;
    width: calc(100% - 180rpx);
}

.wrapper .content .body .list .con .detail .name {
    height: 42rpx;
    line-height: 42rpx;
    font-size: 28rpx;
}

.wrapper .content .body .list .con .detail .time {
    height: 64rpx;
    line-height: 64rpx;
    font-size: 26rpx;
    color: #939393;
}

.wrapper .content .body .list .con .detail .time text {
    float: right;
    font-size: 24rpx;
    color: #ff4131;
}

.wrapper .content .body .list .con .detail .price-num {
    height: 35rpx;
    line-height: 35rpx;
    margin-bottom: 10rpx;
}

.wrapper .content .body .list .con .detail .price-num .num {
    float: left;
    font-size: 22rpx;
    color: #939393;
}

.wrapper .content .body .list .con .detail .price-num .price {
    float: right;
    font-size: 28rpx;
    color: #ff4131;
    font-weight: bold;
}

.wrapper .content .body .list .con .detail .operation {
    float: right;
    height: 60rpx;
}

.wrapper .content .body .list .con .detail .operation .btn {
    width: 170rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 28rpx;
    margin: 0 10rpx;
    display: inline-block;
    border: 1px solid #7a8bdd;
    color: #7a8bdd;
    background: #fff;
    border-radius: 4px;
}

.wrapper .content .body .list .con .detail .operation .btn.confirm {
    background: #7a8bdd;
    color: #fff;
}































