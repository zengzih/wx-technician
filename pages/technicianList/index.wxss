.wrapper {
    height: 100%;
}

.wrapper .content {
    height: calc(100% - 150rpx);
}

.wrapper .content .tabs {
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #DCDFE6;
    display: flex;
}

.wrapper .content .tabs .tab {
    flex: 1;
    text-align: center;
    font-size: 24rpx;
    position: relative;
}

.wrapper .content .tabs .tab.active:after {
    content: '';
    position: absolute;
    width: 80%;
    height: 2px;
    bottom: 1px;
    left: 50%;
    transform: translateX(-50%);
    transition: 0.1s all linear;
    background: #409EFF;
}

.wrapper .content .body {
    height: calc(100% - 80rpx);
    box-sizing: border-box;
}

.wrapper .content .body .list {
    padding: 10rpx;
    background: #fff;
    box-sizing: border-box;
    border-bottom: 1px solid #DCDFE6;
    display: flex;
}

.wrapper .content .body .list .icon-box {
    width: 140rpx;
    height: 140rpx;
    border-radius: 4px;
    flex: 2;
    border: 1px solid #DCDFE6;
}

.wrapper .content .body .list .detail {
    flex: 8;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.wrapper .content .body .list .detail .name {
    padding: 5rpx 0;
    font-size: 28rpx;
    box-sizing: border-box;
}

.wrapper .content .body .list .detail .sex-order-num text,
.wrapper .content .body .list .detail .distance
{
    display: inline-block;
    font-size: 24rpx;
    color: #bbbbbb;
    margin-right: 40rpx;
}











