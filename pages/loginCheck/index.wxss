/* pages/loginCheck/index.wxss */
.wrapper {
    background: #fff;
    height: 100%;
    position: relative;
}

.wrapper .head {
    width: 65rpx;
    height: 65rpx;
    line-height: 65rpx;
    text-align: center;
    border: 1px solid #e8e8e8;
    border-radius: 50%;
    position: absolute;
    top: 50rpx;
    left: 40rpx;
}

.wrapper .head i {
    font-size: 32rpx;
}

.content {
    width: 750rpx;
    height: 450rpx;
    position: absolute;
    top: 30%;
}

.content image {
    width: 210rpx;
    height: 170rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
}

.content .more {
    margin: 200rpx auto;
    width: 560rpx;
    text-align: center;
}

.content .more view:first-child {
    font-size: 32rpx;
}

.content .more view:last-child {
    font-size: 26rpx;
    color: #6f6f6f;
}

.footer {
    height: 140rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.footer view {
    height: 80rpx;
    width: 80%;
    line-height: 80rpx;
    text-align: center;
    background: #409EFF;
    position: absolute;
    top: 50%;
    left: 50%;
    border-radius: 4px;
    transform: translate(-50%, -50%);
    color: #fff;
}






















