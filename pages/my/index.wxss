.wrapper {
    position: relative;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.wrapper .header {
    position: relative;
}

.wrapper .header .setting {
    position: absolute;
    top: -70rpx;
    left: 30rpx;
}

.wrapper .header .setting i {
    font-size: 50rpx;
    color: #000;
}

.wrapper .header .user-head {
    height: 180rpx;
    width: 180rpx;
    border: 2px solid #ccc;
    box-sizing: border-box;
    border-radius: 50%;
    margin: 150rpx auto;
    text-align: center;
    margin-bottom: 100rpx;
    overflow: hidden;
}

.wrapper .header .user-head image{
    height: 180rpx;
    width: 180rpx;
}

.wrapper .header .user-head .user_name {
    font-size: 24rpx;
    color: #000;
    margin-top: 15rpx;
}


.wrapper .header .group-info {
    margin-top: 20rpx;
    overflow: hidden;
}

.wrapper .header .group-info .group {
    float: left;
    width: 33.33%;
    position: relative;
    text-align: center;
}

.wrapper .header .group-info .group:nth-of-type(2):before {
    content: '';
    height: 95%;
    position: absolute;
    width: 1px;
    background: #ccc;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.wrapper .header .group-info .group:nth-of-type(2):after {
    content: '';
    height: 95%;
    position: absolute;
    width: 1px;
    background: #ccc;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}


.wrapper .header .group-info .group .num {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    color: #db6188;
    margin-bottom: 20rpx;
}

.wrapper .header .group-info .group .label {
    font-size: 24rpx;
    color: #000;
}


/*  我的订单 */
.menu_content {
    margin-top: 30rpx;
}

.menu_content .order-form {
    overflow: hidden;
    height: 80rpx;
    line-height: 80rpx;
}

.menu_content .order-form text:first-child {
    float: left;
    font-size: 30rpx;
    color: #000;
}

.menu_content .order-form .read-all {
    float: right;
    font-size: 22rpx;
    color: #a9a9a9;
    height: 100%;
}


/*  代付款状态栏 */

.order-form-panel {
    overflow: hidden;
    height: 160rpx;
    width: 100%;
    border-radius: 4px;
    box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1)
}
.order-form-panel .group {
    float: left;
    width: 25%;
    box-sizing: border-box;
    text-align: center;
    position: relative;
    top: 50%;
    transform: translateY(-50%);

}

.order-form-panel .group .icon {
    width: 60rpx;
    height: 50rpx;
    overflow: hidden;
    margin-bottom: 22rpx;
    display: inline-block;
}

.order-form-panel .group .icon  i {
    font-size: 50rpx;
}

.order-form-panel .group .name {
    font-size: 26rpx;
    color: #969696;
}


/*底部的栏目*/

.menu-panel {
    overflow: hidden;
    margin-top: 40rpx;
}

.menu-panel .panel {
    float: left;
    width: 33.33%;
    height: 170rpx;
    text-align: center;
    margin-bottom: 30rpx;
}

.menu-panel .panel .img-box {
    width: 100%;
    height: 140rpx;
    overflow: hidden;
}

.menu-panel .panel .label {
    font-size: 30rpx;

}
