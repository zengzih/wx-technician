/* pages/note/index.wxss */
page {
  background: #fff!important;
}
.content {
  padding: 20rpx;
}
text {
  font-size:30rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(20,23,53,1);
  margin-bottom: 20rpx;
}
textarea {
  width: 100%;
  min-height:240rpx;
  border:2rpx solid rgba(231,231,231,1);
  padding: 18rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(119,119,119,1);
}
textarea.is-error {
  border-color: #FF5555;
}
.footer {
  position: fixed;
  width: 100%;
  bottom: 0;
}
.footer button {
  height: 86rpx;
}
